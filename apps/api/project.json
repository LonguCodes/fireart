{
  "root": "apps/api",
  "targets": {
    "docker": {
      "executor": "@nx-tools/nx-container:build",
      "options": {
        "push": true,
        "pull": true,
        "tags": [
          "$REPOSITORY/climbing-manager/api:$BUILD_ID",
          "$REPOSITORY/climbing-manager/api:$ENVIRONMENT-latest"
        ],
        "cache-from": ["type=registry,ref=$REPOSITORY/climbing-manager/api:$ENVIRONMENT-latest"],
        "build-args": ["GITHUB_SHA=$GITHUB_SHA", "GITHUB_REF=$GITHUB_REF", "ENV_CFG=$ENVIRONMENT"],
        "file": "apps/api/docker/Dockerfile",
        "target": "prod",
        "platforms": ["linux/arm64"]
      }
    }
  }
}
